<idea-plugin>
  <depends>com.intellij.modules.java</depends>

  <idea-version since-build="201"/>

  <id>net.kyori.kraken</id>
  <name>Kraken</name>
  <vendor email="kashike@vq.lc">kashike</vendor>

  <description><![CDATA[
  I wanted some more things, so here are those things.
  ]]></description>

  <extensions defaultExtensionNs="com.intellij">
    <localInspection groupPath="Java"
                     language="JAVA"
                     shortName="AbstractParameterCanBeFinal"
                     bundle="messages.Kraken"
                     key="inspection.abstract_parameter_can_be_final.display_name"
                     groupKey="group.kraken.name"
                     enabledByDefault="true"
                     level="WARNING"
                     cleanupTool="true"
                     implementationClass="net.kyori.kraken.inspection.impl.AbstractParameterCanBeFinal"/>

    <localInspection groupPath="Java"
                     language="JAVA"
                     shortName="DoubleLiteralEndingWithUppercaseD"
                     bundle="messages.Kraken"
                     key="inspection.literal_ending_with.d.display_name"
                     groupKey="group.kraken.name"
                     enabledByDefault="true"
                     level="WARNING"
                     cleanupTool="true"
                     implementationClass="net.kyori.kraken.inspection.impl.DoubleLiteralEndingWithUppercaseDInspection"/>
    <localInspection groupPath="Java"
                     language="JAVA"
                     shortName="FloatLiteralEndingWithUppercaseF"
                     bundle="messages.Kraken"
                     key="inspection.literal_ending_with.f.display_name"
                     groupKey="group.kraken.name"
                     enabledByDefault="true"
                     level="WARNING"
                     cleanupTool="true"
                     implementationClass="net.kyori.kraken.inspection.impl.FloatLiteralEndingWithUppercaseFInspection"/>
  </extensions>
</idea-plugin>
